{
  "compilerOptions": {
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": true
}
